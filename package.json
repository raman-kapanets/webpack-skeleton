{
  "name": "webpack-skeleton",
  "version": "0.0.1",
  "description": "webpack base skeleton",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack-configs/webpack.conf.prod.js  --colors",
    "build-and-beautify": "webpack --config webpack-configs/webpack.conf.prod.js && html build/*.html --indent-size 2",
    "beautify": "html build/*.html --indent-size 2",
    "watch": "webpack --config webpack-configs/webpack.conf.dev.js --watch",
    "start": "webpack-dev-server --open --config webpack-configs/webpack.conf.dev.js"
  },
  "author": "",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-loader": "^2.1.1",
    "file-loader": "^2.0.0",
    "html-cli": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0"
  }
}
